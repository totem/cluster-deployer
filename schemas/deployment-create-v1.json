{
  "$schema": "http://json-schema.org/draft-04/hyper-schema#",
  "type": "object",
  "title": "Schema for creating deployment",
  "id": "#host-v1",
  "properties": {
    "meta-info": {
      "$ref": "#/definitions/meta-info",
      "minLength": 24,
      "maxLength": 24
    },
    "deployment": {
      "type": "string",
      "title": "Unique name for the host",
      "minLength": 2,
      "maxLength": 100
    },
    "type": {
      "type": "string",
      "title": "Template id for this host.",
      "minLength": 24,
      "maxLength": 24
    },
    "templates": {
      "type": "string",
      "title": "Parent Host Id",
      "minLength": 24,
      "maxLength": 24
    },
    "managedHostTemplates": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/managedHostTemplate"
      }
    }
  },
  "required": ["name"],
  "additionalProperties": false,
  "definitions":{
    "managedHostTemplate": {
      "type": "object"
    },
    "subscribedHostTemplate": {
      "type": "object"
    },
    "industry" : {
      "type": "string",
      "title": "Industry for the company",
      "minLength": 2,
      "maxLength": 100
    }
  },
  "links": [
    {
      "rel": "self",
      "href": "/api/secure/hosts/{id}",
      "mediaType": "application/vnd.saleztoolz.host-v1+json",
      "method": "GET"
    },
    {
      "title": "List Hosts",
      "rel": "parent",
      "href": "/api/secure/hosts",
      "mediaType": "application/vnd.saleztoolz.host-list-v1+json",
      "method": "GET"
    },
    {
      "title": "Updates basic host info",
      "rel": "patch",
      "href": "/api/secure/hosts/{id}",
      "mediaType": "application/vnd.saleztoolz.host-patch-v1+json",
      "method": "PUT"
    },
    {
      "title": "Deletes the host from the system",
      "rel": "delete",
      "href": "/api/secure/hosts/{id}",
      "method": "DELETE"
    }
  ]
}